---
// utils
import { getLocalizedPathname } from "@js/translationUtils";

// config
import { locales } from "@config/siteSettings.json";
import { defaultLocale } from "@config/siteSettings.json";
---

{
	locales.length > 1 &&
		locales.map((lang) => (
			<>
				<link
					rel="alternate"
					hreflang={lang}
					href={Astro.url.origin + getLocalizedPathname(lang, Astro.url)}
				/>
				{lang === defaultLocale && (
					<link
						rel="alternate"
						hreflang="x-default"
						href={Astro.url.origin + getLocalizedPathname(defaultLocale, Astro.url)}
					/>
				)}
			</>
		))
}