---

// main layout
import BaseLayout from "@layouts/BaseLayout.astro";

// utils
import { getLocaleFromUrl } from "@js/localeUtils";

const currLocale = getLocaleFromUrl(Astro.url);

// styles
const overview__heading = "mt-6 mb-2 text-lg font-semibold";
const overview__link = "hover:text-primary-600 transition";
---

<BaseLayout title="Recent Blog Posts" description="Recent Blog Posts Description">
	<div class="site-container">
		<div class="mx-auto max-w-3xl pt-24 md:pt-36">
			<h1 class="h1 text-center">Overview</h1>
			<p class="description mt-2 text-center">The various pages of Blogsmith</p>
			<hr class="bg-primary-600/50 mx-auto mt-4 max-w-[30%] rounded-full border-none pt-1" />
			<div class="xs:grid-cols-2 mx-auto mt-10 grid gap-4 text-center md:grid-cols-3">
				<!-- Blog pages -->
				<div class="flex flex-col">
					<h3 class={overview__heading}>Blog</h3>
					<a class={overview__link} href={"/blog"}>Blog Index</a>
					<a class={overview__link} href={"/examples/blog1"}
						>Blog 1</a
					>
					<a class={overview__link} href={"/examples/blog2"}
						>Blog 2</a
					>
					<a class={overview__link} href={"/examples/blog3"}
						>Blog 3</a
					>
				</div>

				<!-- Hero sections -->
				<div class="flex flex-col">
					<h3 class={overview__heading}>Hero Sections</h3>
					<a class={overview__link} href={"/"}>Hero 1</a>
					<a class={overview__link} href={"/examples/hero2"}
						>Hero 2</a
					>
					<a class={overview__link} href={"/examples/hero3"}
						>Hero 3</a
					>
				</div>

				<!-- Blog Post Cards -->
				<div class="flex flex-col">
					<h3 class={overview__heading}>Blog Post Cards</h3>
					<a class={overview__link} href={"/examples/postcard1"}
						>Post Card 1</a
					>
					<a class={overview__link} href={"/examples/postcard2"}
						>Post Card 2</a
					>
				</div>

				<!-- Other -->
				<div class="flex flex-col">
					<h3 class={overview__heading}>Other Pages</h3>
					<a class={overview__link} href={"/contact"}>Contact</a>
					<a class={overview__link} href={"/categories"}
						>Categories</a
					>
					<a class={overview__link} href={"/tags"}>Tags</a>
					<a class={overview__link} href={"/privacy-policy"}
						>Privacy Policy</a
					>
					<a class={overview__link} href={"/not-a-link"}>404</a>
					<a
						class={overview__link}
						href={"/rss.xml"}
						target="_blank"
						rel="noopener noreferrer">RSS Feed</a
					>
				</div>
			</div>
		</div>
	</div>
</BaseLayout>